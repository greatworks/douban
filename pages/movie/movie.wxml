<scroll-view>
<view class='meta'><image background-size="cover" class='poster' src='{{movie.images.small}}'></image>
  <text class='title'>{{movie.title}}</text>
  <text class='info'>{{movie.rating.average}}</text>
  <text class='info'>导演：<block wx:for="{{movie.directors}}">{{item.name}} </block></text>
  <text class='info'>演员：<block wx:for="{{movie.casts}}">{{item.name}} </block></text>
</view>
<view class="summary">
  <text class="label">摘要</text>
  <text class="content">{{movie.summary}}</text>
</view>

</scroll-view>
